{
  "compilerOptions": {
    "strictNullChecks": true,
    "downlevelIteration": true,
    "outDir": "dist", // local de armazenamento dos arquivos compilados para .js
    "module": "commonjs", // transformação de novas funcionalidades do .ts funcionalidades do .js 
    "target": "ES5", // compilação de .ts para determinada versão do .js 
    "esModuleInterop": true, // conversão entre módulos diferentes
    "allowJs": true, // permite a utilização de arquivos .js para configuração de ambiente
    "strict": false,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "strictPropertyInitialization": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}